<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.luisb.petagramplus.fragment.PerfilFragment"
    android:layout_gravity="center"
    android:orientation="vertical">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_marginTop="@dimen/radius_cv"
        android:id="@+id/imgperfil"
        android:layout_width="@dimen/perfil_size"
        android:layout_height="@dimen/perfil_size"
        android:src="@drawable/pet11"
        app:civ_shadow="true"
        app:civ_border_width="0dp"
        app:civ_shadow_color="#00BCD4"
        app:civ_shadow_radius="4"
        android:layout_gravity="center_horizontal"/>
    <!--Lib: https://github.com/lopspower/CircularImageView-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/perfil_panda"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"/>

    <!--Mi recycler view para las cardViews-->

    <android.support.v7.widget.RecyclerView
        android:layout_gravity="center"
        android:id="@+id/rvPetPerfil"
        android:paddingStart="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
