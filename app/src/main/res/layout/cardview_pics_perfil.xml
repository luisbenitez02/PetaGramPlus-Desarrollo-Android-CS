<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPerfilPics"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    card_view:cardCornerRadius="@dimen/radius_cv"
    android:layout_marginBottom="@dimen/margin_pics"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPerfilPic"
            android:layout_width="118dp"
            android:layout_height="100dp"
            android:contentDescription="@string/descript_img"
            android:scaleType="centerCrop"
            android:src="@drawable/pet1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_revl"
            android:paddingTop="@dimen/padding_revl">

            <!--parte del huesito dorado-->
            <TextView
                android:id="@+id/tvPerfilContador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/imgPerfilContador"
                android:gravity="center_vertical"
                android:text="@string/contador"
                android:textSize="@dimen/size_chico" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgPerfilContador"
                android:layout_width="@dimen/huesito"
                android:layout_height="@dimen/huesito"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_datos"
                android:layout_marginStart="@dimen/margin_datos"
                android:src="@drawable/bone_g" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>